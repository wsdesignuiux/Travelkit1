                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Share"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/icons"
                    />


            </LinearLayout>

            <LinearLayout
